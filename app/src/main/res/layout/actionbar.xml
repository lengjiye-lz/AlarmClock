<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_actionbar_layout"
        android:paddingLeft="@dimen/dimen_16px"
        android:paddingRight="@dimen/dimen_16px"
        android:layout_width="match_parent"
        android:background="@color/blue"
        android:layout_height="@dimen/actionbar_height">

        <Button
            android:id="@+id/btn_lift"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_right"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标题"
            style="@style/text_36_white"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_10px"
            android:layout_marginRight="@dimen/dimen_10px"
            android:layout_toLeftOf="@+id/btn_right"
            android:layout_toRightOf="@+id/btn_lift"
            android:layout_toEndOf="@+id/btn_lift" />
    </RelativeLayout>

</LinearLayout>
